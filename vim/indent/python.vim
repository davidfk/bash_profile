" google/pep8 style
setlocal tabstop=4                " # cols a tab counts for
setlocal shiftwidth=4             " # cols text indented with (<< and >>)
setlocal softtabstop=4            " # cols vim uses when hit tab in insert mode
setlocal expandtab                " insert spaces when hit tab in insert mode
setlocal smartindent              " smart indent assuming text is c-program
setlocal autoindent               " use indent from last line (smartindent better with this on)
